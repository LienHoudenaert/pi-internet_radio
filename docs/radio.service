[Unit]
Description=Radio
Wants=pifi.service systemd-networkd-wait-online.service
After=systemd-networkd-wait-online.service pifi.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/pi/radio.py
User=root
Group=root
Restart=on-failure
SyslogIdentifier=radio_service
RestartSec=5
TimeoutStartSec=infinity

[Install]
WantedBy=multi-user.target
